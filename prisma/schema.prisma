// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model History {
  idx         String  @id @default(auto()) @map("_id") @db.ObjectId
  id          String  @unique
  name        String
  messages    Json[]
  model       Json
  prompt      String
  temperature Float
  folderId    String?
}

model Prompt {
  idx         String  @id @default(auto()) @map("_id") @db.ObjectId
  id          String  @unique
  name        String
  description String
  content     String
  model       Json
  folderId    String?
}

model Folder {
  idx  String @id @default(auto()) @map("_id") @db.ObjectId
  id   String @unique
  name String
  type String
}
